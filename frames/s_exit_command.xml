<?xml version="1.0" encoding="utf-8"?>
<section id="exit_command">
  <title>exit command</title>
  <simplesect role="usage" id="gen-000">
    <title>Usage</title>
    <para>
      <literal>exit [<ulink url="s_exp.html">expression</ulink>]</literal>
    </para>
  </simplesect>
  <simplesect role="aliases" id="gen-001">
    <title>Aliases</title>
    <para>
      <literal> quit</literal>
    </para>
  </simplesect>
  <simplesect role="description" id="gen-002"><title>Description</title>
	  <para>
	    Exit xsh, optionally with an exit-code
	    resulting from evaluation of a given <ulink url="s_exp.html">expression</ulink>.
	  </para>
	  <para>
	    WARNING: No files are saved on exit.
	  </para>
	</simplesect>
  <simplesect id="gen-003">
    <title>Sections</title>
    <para>
      <ulink url="s_Flow.html">Flow control</ulink>
    </para>
  </simplesect>
</section>
