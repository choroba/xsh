<?xml version="1.0" encoding="utf-8"?>
<section id="cd_command">
  <title>lcd command</title>
  <simplesect role="usage" id="gen-000">
    <title>Usage</title>
    <para>
      <literal>lcd <ulink url="s_exp.html">expression</ulink></literal>
    </para>
  </simplesect>
  <simplesect role="aliases" id="gen-001">
    <title>Aliases</title>
    <para>
      <literal> chdir</literal>
    </para>
  </simplesect>
  <simplesect role="description" id="gen-002"><title>Description</title>
	  <para>
	    Changes the filesystem working directory 
	    to <ulink url="s_exp.html">expression</ulink>, if possible.  
	    If <ulink url="s_exp.html">expression</ulink> is omitted, changes to the directory
	    specified in HOME environment variable, if set; if not,
	    changes to the directory specified by LOGDIR environment
	    variable.
	  </para>
	</simplesect>
  <simplesect id="gen-003">
    <title>Sections</title>
    <para>
      <ulink url="s_Perl_shell.html">Interacting with Perl and Shell</ulink>
    </para>
  </simplesect>
</section>
