<?xml version="1.0" encoding="utf-8"?>
<section id="ucfirst_function">
  <title>xsh:ucfirst function</title>
  <simplesect role="usage" id="gen-000">
    <title>Usage</title>
    <para>
      <literal>string xsh:ucfirst(string STR)</literal>
    </para>
  </simplesect>
  <simplesect role="description" id="gen-001"><title>Description</title>
	  <para>
	    Returns the value of <literal>STR</literal>
	    with the first character uppercased.
	  </para>
	</simplesect>
</section>
