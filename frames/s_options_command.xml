<?xml version="1.0" encoding="utf-8"?>
<section id="options_command">
  <title>settings command</title>
  <simplesect role="usage" id="gen-000">
    <title>Usage</title>
    <para>
      <literal>settings</literal>
    </para>
  </simplesect>
  <simplesect role="description" id="gen-001"><title>Description</title>
	  <para>List current values of all XSH2 settings (such as
	    validation flag or query-encoding).</para>
	  <para><literal>--variables</literal> or <literal>:v</literal>
	    flag enforces syntax which makes use of variable assignments.
	    Otherwise, settings are listed in the form of XSH commands.
	  </para>
	  <example id="gen-002">
	    <title>Store current settings in your .xsh2rc</title>
	    <programlisting>xsh&gt; <userinput>settings | cat &gt; ~/.xsh2rc</userinput></programlisting>
	  </example>
	</simplesect>
  <simplesect id="gen-003">
    <title>Sections</title>
    <para><ulink url="s_Information.html">Retrieving more information</ulink>, <ulink url="s_Configuration.html">Global settings</ulink></para>
  </simplesect>
</section>
